.mt-4
  .content
    .row
      .col-md-6.offset-3
        = form_with model: [:admins, web_book, page] do |f|
          = render 'shared/error_messages', object: f.object

          .mb-3
            = f.label :title, class: 'form-label'
            = f.text_field :title, value: preview_page_title, class: 'form-control'

          .mb-3
            = f.label :body, class: 'form-label'
            = f.text_area :body, value: preview_page_body, class: 'form-control', size: '35x20'

          .mb-3
            = f.submit yield(:button_text), class: 'btn btn-primary'
            = f.submit 'プレビュー', name: 'preview', class: 'btn btn-info text-white'
